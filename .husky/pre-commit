#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Use system Node.js version
# export PATH="/Users/chenchen/.trae/sdks/versions/node/current:$PATH"

# 生成版本号
# 直接使用系统 Node.js 运行脚本
/usr/local/opt/node@20/bin/node scripts/generate-version.js

# 自动添加修改的版本文件
git add src/lib/version.ts
git add VERSION.txt

# 运行代码检查
npx lint-staged